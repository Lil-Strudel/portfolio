---
import Layout from "../layouts/Layout.astro";
import HeroCode from "../components/HeroCode.svelte";
---

<Layout title="Portfolio | Aaron Santo (Lil-Strudel)">
  <main class="min-w-[100vw] min-h-[100vh] bg-white dark:bg-black">
    <div
      class="relative isolate overflow-hidden bg-gradient-to-b from-indigo-100/20 dark:from-black-light/50"
    >
      <div
        class="mx-auto max-w-7xl pb-24 pt-10 sm:pb-32 lg:grid lg:grid-cols-2 lg:gap-x-8 lg:px-8 lg:py-40"
      >
        <div class="px-6 lg:px-0 lg:pt-4">
          <div class="mx-auto max-w-2xl">
            <div class="max-w-lg">
              <h1
                class="mt-10 text-4xl font-serif font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl"
              >
                Aaron Santo
              </h1>
              <p
                class="mt-6 text-lg font-serif leading-8 text-gray-600 dark:text-gray"
              >
                // Lil Strudel
              </p>
              <div class="mt-10 flex items-center gap-x-6">
                <a
                  href="/"
                  class="rounded-md bg-indigo-600 dark:bg-blue px-3.5 py-2.5 text-sm font-semibold text-white dark:text-black shadow-sm hover:bg-indigo-500 dark:hover:bg-purple focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:focus-visible:outline-indigo"
                  >About Me</a
                >
                <a
                  href="https://github.com/Lil-Strudel"
                  target="_blank"
                  class="text-sm font-semibold leading-6 text-gray-900 dark:text-white"
                  >View on GitHub <span aria-hidden="true">â†’</span></a
                >
              </div>
            </div>
          </div>
        </div>
        <div
          class="mt-20 sm:mt-24 md:mx-auto md:max-w-2xl lg:mx-0 lg:mt-0 lg:w-screen"
        >
          <div
            class="absolute inset-y-0 right-1/2 -z-10 -mr-10 w-[200%] skew-x-[-30deg] bg-white dark:bg-black shadow-xl shadow-indigo-600/10 dark:shadow-blue/10 ring-1 ring-indigo-50 dark:ring-blue md:-mr-20 lg:-mr-36"
            aria-hidden="true"
          >
          </div>
          <div class="shadow-lg md:rounded-3xl">
            <div
              class="bg-indigo-500 dark:bg-blue [clip-path:inset(0)] md:[clip-path:inset(0_round_theme(borderRadius.3xl))]"
            >
              <div
                class="absolute -inset-y-px left-1/2 -z-10 ml-10 w-[200%] skew-x-[-30deg] bg-indigo-100 dark:bg-purple opacity-20 dark:opacity-40 ring-1 ring-inset ring-white dark:ring-black md:ml-20 lg:ml-36"
                aria-hidden="true"
              >
              </div>
              <div class="relative px-6 pt-8 sm:pt-16 md:pl-16 md:pr-0">
                <div class="mx-auto max-w-2xl md:mx-0 md:max-w-none">
                  <div
                    class="w-screen overflow-hidden rounded-tl-xl bg-gray-900 dark:bg-black-dark"
                  >
                    <div
                      class="flex bg-gray-800/40 dark:bg-black-light ring-1 ring-white/5 dark:ring-pink"
                    >
                      <div
                        class="-mb-px flex text-sm font-medium leading-6 text-gray-400 dark:text-white"
                      >
                        <div
                          class="border-b border-r border-b-white/20 dark:border-b-pink border-r-white/10 dark:border-r-pink bg-white/5 dark:bg-black-light px-4 py-2 text-white"
                        >
                          NotificationSetting.jsx
                        </div>
                        <div
                          class="border-r border-gray-600/10 dark:border-pink px-4 py-2"
                        >
                          App.jsx
                        </div>
                      </div>
                    </div>
                    <div class="px-6 pb-14 pt-6">
                      <HeroCode client:only="svelte" />
                    </div>
                  </div>
                </div>
                <div
                  class="pointer-events-none absolute inset-0 ring-1 ring-inset ring-black/10 dark:ring-white md:rounded-3xl"
                  aria-hidden="true"
                >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div
        class="absolute inset-x-0 bottom-0 -z-10 h-24 bg-gradient-to-t from-white dark:from-black sm:h-32"
      >
      </div>
    </div>
  </main>
</Layout>
